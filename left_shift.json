{"rules": [
          {
            "description": "Change left_shift to control+caps_lock if pressed alone for 300ms (by Kelly Hwong)",
            "manipulators": [
              {
                "from": {
                  "key_code": "left_shift",
                  "modifiers": {
                    "optional": ["any"]
                  }
                },
                "to": [
                  {
                    "key_code": "left_shift"
                  }
                ],
                "to_if_alone": [
                  {
                    "hold_down_milliseconds": 300,
                    "key_code": "spacebar",
                    "modifiers": "left_control"
                  }
                ],
                "type": "basic"
              }
            ]
          }
        ]}
